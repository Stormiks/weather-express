<div id="sensorAdd" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Добавить модель датчика</h4>
      </div>
      <div class="modal-body">
        <form class="form-inline" v-on:submit.prevent="onSaveSensor">
          <div class="form-group">
            <label for="sensorModel">Датчик: </label>
            <input id="sensorModel" type="text" class="form-control" placeholder="Введите модель"
              v-model="modalFormData.modelName">
          </div>
          <button type="submit" class="btn btn-default">Отправить</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal"
          v-on:click="onClearModalForm">Отменить</button>
      </div>
    </div>
  </div>
</div>
